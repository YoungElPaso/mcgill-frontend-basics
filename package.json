{
  "name": "mcgill-frontend-basics",
  "version": "1.0.0",
  "description": "A package that manages McGill frontend dependencies and some configuration and build steps.",
  "scripts": {
    "watch": "node-sass --include-path node_modules/susy/sass -r --output-style=$npm_package_config_devOutputStyle -w $npm_package_config_sassIn -o $npm_package_config_sassOut",
    "build": "node-sass --include-path node_modules/susy/sass -r --output-style=$npm_package_config_prodOutputStyle $npm_package_config_sassIn -o $npm_package_config_sassOut",
    "dev": "npm run build && serve -n -p $npm_package_config_devPort & npm run watch",
    "test": "./node_modules/mocha/bin/mocha test/susy-test.js",
    "build:styleguide": "node ./styleguide/styleguide-build.js > ./styleguide/index.html"
  },
  "config": {
    "devPort": "3000",
    "sassOut": "css",
    "sassIn": "sass",
    "prodOutputStyle": "compressed",
    "devOutputStyle": "expanded",
    "componentsDir": "styleguide/components"
  },
  "directories": {
    "test": "./test"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": "Jesse A Sutherland",
  "repository": "github:youngelpaso/mcgill-frontend-basics",
  "license": "ISC",
  "dependencies": {
    "susy": "^3.0.5",
    "node-sass": "git+https://github.com/sass/node-sass.git#v4.7.0"
  },
  "devDependencies": {
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass-true": "^4.0.0",
    "serve": "^9.0.0"
  }
}
