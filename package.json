
{
  "name": "mcgill-frontend-basics",
  "version": "1.0.0",
  "description": "A package that manages McGill frontend dependencies and some configuration and build steps.",
  "scripts": {
    "dev:sass": "node-sass --include-path node_modules/susy/sass -r --output-style=$npm_package_config_devOutputStyle $npm_package_config_sassIn -o $npm_package_config_sassOut",
    "prod:sass": "node-sass --include-path node_modules/susy/sass -r --output-style=$npm_package_config_prodOutputStyle $npm_package_config_sassIn -o $npm_package_config_sassOut",
    "dev:serve": "serve -n -p $npm_package_config_devPort",
    "dev:builds": "npm run dev:sass && npm run styleguide",
    "dev": "npm run dev:serve & npm-watch dev:builds",
    "styleguide": "node ./styleguide/styleguide-build.js > ./styleguide/index.html && cp css/styleguide.css styleguide/css/styleguide.css",
    "test": "./node_modules/mocha/bin/mocha test/susy-test.js"
  },
  "watch": {
    "dev:builds": {
      "patterns": [
        "components",
        "sass"
      ],
      "extensions": "html,scss,js",
      "quiet": false
    }
  },
  "config": {
    "devPort": "3000",
    "sassOut": "css",
    "sassIn": "sass",
    "prodOutputStyle": "compressed",
    "devOutputStyle": "expanded",
    "componentsDir": "components"
  },
  "directories": {
    "test": "./test"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": "Jesse A Sutherland",
  "repository": "github:youngelpaso/mcgill-frontend-basics",
  "license": "ISC",
  "dependencies": {
    "susy": "^3.0.5",
    "node-sass": "git+https://github.com/sass/node-sass.git#v4.7.0"
  },
  "devDependencies": {
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "npm-watch": "^0.3.0",
    "pug": "^2.0.3",
    "sass-true": "^4.0.0",
    "serve": "^9.0.0"
  }
}
